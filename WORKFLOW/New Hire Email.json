  "definition": {
    "start": "Get List of Identities",
    "steps": {
      "Get List of Identities": {
        "actionId": "sp:get-identities",
        "attributes": {
          "inputQuery": "attributes.cloudLifecycleState:\"prehire\" AND attributes.daysToHire:\"1\"",
          "searchBy": "searchQuery"
        },
        "nextStep": "Send Email 1",
        "type": "action",
        "versionNumber": 2
      },
      "Send Email 1": {
        "actionId": "sp:send-email",
        "attributes": {
          "body": "<p>Dear  ${name} </p>\n\n<p>Please use the below link to retrieve your temporary password to login to Point32Healthâ€™s system.  <br>https://point32health-sb.identitynow.com/r/default/reset-password</br> </p>\n\n<p>Your Point32Health username: \n<br>${uid}</br> </p>\n\n<p>If you have any questions, please contact IAM_Support@point32health.org</p>",
          "context": "{\"name.$\":\"$.getListOfIdentities.identities[*].attributes.displayName\",\"uid.$\":\"$.getListOfIdentities.identities[*].attributes.uid\"}",
          "from": null,
          "recipientEmailList.$": "$.getListOfIdentities.identities[*].attributes.email",
          "replyTo": "iam_support@point32health.org",
          "subject": "Welcome to Point32!"
        },
        "nextStep": "success",
        "type": "action",
        "versionNumber": 2
      },
      "success": {
        "type": "success"
      }
    }
  },
